{
  "name": "onetime",
  "private": true,
  "version": "1.0.0",
  "description": "A secure one-time password manager",
  "author": "Your Name",
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "vite build && vite build -c vite.config.electron.ts && electron-builder",
    "electron:preview": "electron ."
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@types/uuid": "^10.0.0",
    "html5-qrcode": "^2.3.8",
    "jsotp": "^1.0.4",
    "otpauth-migration-parser": "^0.1.1",
    "protobufjs": "^7.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "react-router-dom": "^7.1.1",
    "rfc4648": "^1.5.4",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "sharp": "^0.33.5",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.onetime.app",
    "productName": "OneTime",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "dist-electron/preload.js",
        "to": "preload.js"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "asar": true,
    "forceCodeSigning": false
  }
}
